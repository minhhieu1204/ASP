@model IEnumerable<DoAnASP.Areas.Admin.Models.DatVeModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SoGhe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayDat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThaiThanhToan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lichChieu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.khachHang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoGhe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThaiThanhToan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lichChieu.IdLichChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khachHang.DiaChi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDatVe">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDatVe">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDatVe">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
