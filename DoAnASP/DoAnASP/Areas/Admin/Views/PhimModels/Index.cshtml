@model IEnumerable<DoAnASP.Areas.Admin.Models.PhimModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenPhim)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThoiLuong)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mota)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.loaiPhim)"
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenPhim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiLuong)
                    </td>
                    <td>
                        <img src="~/ImageAdmin/ImgPhim/@Html.DisplayFor(modelItem => item.HinhAnh)" style="width:100px; height:100px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mota)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.loaiPhim.TenLoaiPhim)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdPhim">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdPhim">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdPhim">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>