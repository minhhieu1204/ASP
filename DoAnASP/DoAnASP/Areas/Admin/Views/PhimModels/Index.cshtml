@model IEnumerable<DoAnASP.Areas.Admin.Models.PhimModel>

@{
    ViewData["Title"] = "Index";
}


<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive table-responsive-data2">
                        <h1>Phim</h1>

                        <p>
                            <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create">Create New</a>
                        </p>
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>Tên phim</th>
                                    <th>Thời lượng</th>
                                    <th>Hình ảnh</th>
                                    <th>Loại phim</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="tr-shadow">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenPhim)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThoiLuong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HinhAnh)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.loaiPhim.TenLoaiPhim)
                                        </td>
                                        <td>
                                            <div class="table-data-feature">
                                                <button asp-action="Edit" asp-route-id="@item.IdPhim" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                    <i class="zmdi zmdi-edit"></i>
                                                </button>
                                                <button asp-action="Delete" asp-route-id="@item.IdPhim" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
