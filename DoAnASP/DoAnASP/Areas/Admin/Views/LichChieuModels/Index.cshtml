@model IEnumerable<DoAnASP.Areas.Admin.Models.LichChieuModel>

@{
    ViewData["Title"] = "Index";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive table-responsive-data2">
                        <h1>Lich chiếu</h1>

                        <p>
                            <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create">Create New</a>
                        </p>
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>
                                        Ngày chiếu
                                    </th>
                                    <th>
                                        Giờ bắt đầu
                                    </th>
                                    <th>
                                        Giờ kết thúc
                                    </th>
                                    <th>
                                        Giá vé
                                    </th>
                                    <th>
                                        Tên Phòng
                                    </th>
                                    <th>
                                        Tên Phim
                                    </th>
                                    <th>
                                        Giảm giá
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="tr-shadow">
                                        <td>
                                            @{ 
                                                var day = item.NgayChieu.Day;
                                                var month = item.NgayChieu.Month;
                                                var year = item.NgayChieu.Year;
                                                string s = day + "/" + month + "/" + year;
                                            }
                                            @s
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GioBatDau)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GioKetThuc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GiaVe)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.phong.TenPhong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.phim.TenPhim)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.giamGia.PhanTram)%
                                        </td>
                                        <td>
                                            <div class="table-data-feature">
                                                <a asp-action="Edit" asp-route-id="@item.IdLichChieu" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                    <i class="zmdi zmdi-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.IdLichChieu" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>