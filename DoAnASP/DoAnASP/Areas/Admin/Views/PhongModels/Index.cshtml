@model IEnumerable<DoAnASP.Areas.Admin.Models.PhongModel>

@{
    ViewData["Title"] = "Index";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive table-responsive-data2">
                        <h1>Phòng</h1>

                        <p>
                            <a onclick="showModal('@Url.Action("Create","PhongModels",null,Context.Request.Scheme)','Thêm phòng')" class="au-btn au-btn-icon au-btn--green au-btn--small" >Create New</a>
                        </p>
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>
                                        Tên phòng
                                    </th>
                                    <th>
                                        Rạp
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="tr-shadow">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenPhong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.rap.DiaChiRap)
                                        </td>
                                        <td>
                                            <div class="table-data-feature">
                                                <a onclick="showModal('@Url.Action("Edit","PhongModels",new { id = $"{item.IdPhong}" },Context.Request.Scheme)','Cập nhật')" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                    <i class="zmdi zmdi-edit"></i>
                                                </a>
                                                <a onclick="showModal('@Url.Action("Delete","PhongModels",new { id = $"{item.IdPhong}" },Context.Request.Scheme)','Xóa phòng')" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
