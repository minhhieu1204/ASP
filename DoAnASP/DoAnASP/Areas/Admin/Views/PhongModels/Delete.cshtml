@model DoAnASP.Areas.Admin.Models.PhongModel

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Tên Phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenPhong)
        </dd>
        <dt class="col-sm-2">
            Rạp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.rap.DiaChiRap)
        </dd>
    </dl>

    <form asp-action="Delete" id="frm_delete">
        <input type="hidden" asp-for="IdPhong" />
        <input type="submit" id="btn_delete" value="Delete" class="btn btn-danger" />
    </form>
</div>
<script>
    $('#btn_delete').click(function (e) {
        e.preventDefault();
        $.ajax({
            method: "POST",
            url: "@Url.Action("Delete")",
            data: $('#frm_delete').serialize()
        }).done(function (response) {
            console.log(response);
            if (response) {
                $('#form-modal .modal-body').html("Xóa thành công");
                //hiện tiêu đề
                $('#form-modal .modal-title').html("Thông báo");
                //hiện modal
                $('#form-modal').modal('show');
            }
            else {
                $('#form-modal .modal-body').html("Xóa thất bại");
                //hiện tiêu đề
                $('#form-modal .modal-title').html("Thông báo");
                //hiện modal
                $('#form-modal').modal('show');
            }
        })
    })
</script>